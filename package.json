{
	"name": "sveltekit-cards",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"start": "node server.js",
		"test": "NODE_OPTIONS='--require ./tests/setup.cjs' vitest --config vitest.config.ts",
		"test:ui": "NODE_OPTIONS='--require ./tests/setup.cjs' vitest --ui --config vitest.config.ts",
		"test:coverage": "NODE_OPTIONS='--require ./tests/setup.cjs' vitest --coverage --config vitest.config.ts",
		"test:e2e": "playwright test",
		"test:e2e:ui": "playwright test --ui",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write ."
	},
	"devDependencies": {
		"@sveltejs/adapter-node": "^5.0.0",
		"@sveltejs/kit": "^2.8.3",
		"@sveltejs/vite-plugin-svelte": "^4.0.0",
		"@types/jsonwebtoken": "^9.0.5",
		"@typescript-eslint/eslint-plugin": "^8.0.0",
		"@typescript-eslint/parser": "^8.0.0",
		"@playwright/test": "^1.48.0",
		"@vitest/ui": "^4.0.16",
		"autoprefixer": "^10.4.20",
		"eslint": "^9.0.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.36.0",
		"postcss": "^8.4.31",
		"prettier": "^3.0.0",
		"prettier-plugin-svelte": "^3.2.0",
		"svelte": "^5.0.0",
		"svelte-check": "^4.3.5",
		"tailwindcss": "^3.4.0",
		"tslib": "^2.8.0",
		"typescript": "^5.6.0",
		"vite": "^5.4.20",
		"vitest": "^4.0.16"
	},
	"type": "module",
	"dependencies": {
		"@types/socket.io": "^3.0.2",
		"classnames": "^2.5.0",
		"express": "^4.21.0",
		"jsonwebtoken": "^9.0.3",
		"socket.io": "^4.8.3",
		"socket.io-client": "^4.8.3"
	},
	"overrides": {
		"ws": ">=8.17.1",
		"braces": ">=3.0.3"
	}
}
